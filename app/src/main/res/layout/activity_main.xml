<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Контейнер для имени пользователя и кнопки выхода -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top|end"
        android:layout_alignParentTop="true">

        <!-- Имя пользователя -->
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <!-- Кнопка выхода (Logout) -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выход"
            android:textColor="@android:color/white"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>

    <!-- Текст "Ресторан" выше надписи "Ликви" -->
    <TextView
        android:id="@+id/restaurantLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ресторан"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp" /> <!-- Увеличен отступ для опускания текста ниже -->

    <!-- Текст с названием ресторана "L Y K V E" -->
    <TextView
        android:id="@+id/restaurantText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="L  Y  K  V  E"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@id/restaurantLabel"
        android:layout_marginTop="8dp"/>

    <!-- Кнопки меню внизу -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Меню" />

        <Button
            android:id="@+id/orderButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Заказ" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Профиль" />
    </LinearLayout>

</RelativeLayout>
